# Common credentials shared across all environments
# Copy to common.enc.env and encrypt with: sops -e -i credentials/common.enc.env
#
# These are tied to your OVH account, not a specific project.

# OVH API
TF_VAR_endpoint=ovh-eu
TF_VAR_application_key=your_application_key
TF_VAR_application_secret=your_application_secret
TF_VAR_consumer_key=your_consumer_key

# SSH
TF_VAR_public_key=ssh-ed25519 AAAA... your@email
TF_VAR_private_key=~/.ssh/id_ed25519

# S3 credentials for Terraform state backend
AWS_ACCESS_KEY_ID=your_s3_access_key
AWS_SECRET_ACCESS_KEY=your_s3_secret_key
