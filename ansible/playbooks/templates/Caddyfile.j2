# IP-only mode (no HTTPS without a domain)

:80 {
	# API routes
	handle /api/* {
		reverse_proxy api:{{ api_port }}
	}

	handle /.well-known/* {
		reverse_proxy api:{{ api_port }}
	}

	handle /health {
		reverse_proxy api:{{ api_port }}
	}

	# PowerSync
	handle /powersync/* {
		uri strip_prefix /powersync
		reverse_proxy powersync:{{ powersync_port }}
	}

	# MQTT over WebSocket
	handle /mqtt {
		reverse_proxy emqx:{{ emqx_ws_port }}
	}
}
